# mtail configuration file
# Generated by Ansible

# Log files to monitor
logs:
{% for log in mtail_logs %}
  - {{ log }}
{% endfor %}

# mtail programs
progs:
{% for prog in mtail_progs %}
  - name: {{ prog.name }}
    content: |
{{ prog.content | indent(6) }}
{% endfor %}

# Metrics configuration
metrics_port: {{ mtail_metrics_port }}
log_level: {{ mtail_log_level }}

# Emit configuration
emit_metrics: {{ mtail_emit_metrics | lower }}
emit_prog_label: {{ mtail_emit_prog_label | lower }}
emit_metric_label: {{ mtail_emit_metric_label | lower }}

# Additional options
{% if mtail_extra_options is defined %}
{% for key, value in mtail_extra_options.items() %}
{{ key }}: {{ value }}
{% endfor %}
{% endif %} 